        setZoom={setZoom}
        showGuides={showGuides}
        setShowGuides={setShowGuides}
        showGrid={showGrid}
        setShowGrid={setShowGrid}
        canUndo={canUndo}
        canRedo={canRedo}
        onUndo={() => editorRef.current?.undo?.()}
        onRedo={() => editorRef.current?.redo?.()}
        onSave={handleSave}
        onExport={() => {
