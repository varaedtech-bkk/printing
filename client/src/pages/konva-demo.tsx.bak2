                          if (e.key === 'Enter') {
                            const text = e.currentTarget.value.trim();
                            if (text) {
                              if (editorRef.current?.addText) {
                                editorRef.current.addText(text);
                                toast({
                                  title: "Text Added",
                                  description: `"${text}" added to canvas`,
